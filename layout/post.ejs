<article class="post">
    <h1 class="fs-3 m-0">
        <a class="text-reset text-decoration-none" href="<%- url_for(page.path) %>"><%= page.title %></a>
    </h1>
    <div class="row">
        <div class="col-auto my-3">
            <time class="text-nowrap" datetime="<%= page.date.toDate().toISOString() %>">
                <%= date(page.date, "YYYY-MM-DD") %>
            </time>
        </div>
        <% if (page.categories && page.categories.length) { %>
            <div class="col-auto my-3">
                <%- partial('_partial/categories', { categories: page.categories }) %>
            </div>
        <% } %>
        <% if (page.tags && page.tags.length) { %>
            <div class="col-auto my-3">
                <%- partial('_partial/tags', { tags: page.tags }) %>
            </div>
        <% } %>
    </div>
    <div class="overflow-x-auto">
        <%- page.content %>
    </div>
</article>