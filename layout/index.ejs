<h1 class="fw-light"><%= page.title %></h1>
<% page.posts.forEach(post => { %>
  <div class="row">
    <div class="col-md-4">
      <a href="<%- url_for(post.path) %>" class="text-reset text-decoration-none">
        <% if (post.thumbnail) { %>
        <img src="<%= url_for(post.thumbnail) %>" alt="Thumbnail for <%= post.title %>" class="img-fluid rounded mb-3">
        <% } else { %>
          <img src="<%= url_for('/images/default-thumbnail.svg') %>" alt="Default Thumbnail" class="img-fluid rounded mb-3">
        <% } %>
      </a>
    </div>
    <div class="col-md-8">
      <h2 class="fs-4"><a href="<%- url_for(post.path) %>" class="text-reset text-decoration-none"><%= post.title %></a></h2>
  
      <div class="d-flex">
        <div class="me-4">
          <p class="text-muted mb-2"><%= date(post.date, "YYYY-MM-DD") %></p>
        </div>
        <div>
          <%- partial('_partial/tags', { tags: post.tags }) %>
        </div>
      </div>
  
      <p>
        <%- strip_html(post.excerpt || post.content).substr(0, 140) %>
        <% if ((post.excerpt || post.content).length > 140) { %><a href="<%- url_for(post.path) %>">...read more</a><% } %>
      </p>
    </div>

    <hr class="my-5">

  </div>
<% }) %>

<%- partial('_partial/pagination') %>