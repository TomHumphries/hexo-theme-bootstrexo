<div class="d-flex justify-content-center">
  <nav id="pagination" aria-label="Pagination">
    <ul class="pagination">
      <li class="page-item<% if (!page.prev) { %> disabled<% } %>">
        <a class="page-link" href="<%- url_for(page.prev_link) %>" aria-label="Previous">
          <%= __('prev') %>
        </a>
      </li>
      <li class="page-item">
        <span class="page-link disabled">
          <%= page.current %> / <%= page.total %>
        </span>
      </li>
      <li class="page-item<% if (!page.next) { %> disabled<% } %>">
        <a class="page-link" href="<%- url_for(page.next_link) %>" aria-label="Next">
          <%= __('next') %>
        </a>
      </li>
    </ul>
  </nav>
</div>